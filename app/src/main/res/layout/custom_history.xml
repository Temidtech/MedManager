<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rootView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@android:color/white"
    android:clickable="true">

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:src="@drawable/pill_icon"
        android:id="@+id/imgItem"/>

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="6dp"
        android:layout_marginRight="6dp"
        android:fontFamily="@font/roboto_black"
        android:textColor="@color/colorAccent"
        tools:text="Item test text" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tvMedication"
        android:layout_alignStart="@+id/tvMedication"
        android:layout_below="@+id/tvMedication"
        android:fontFamily="@font/roboto_black"
        tools:text="Item test text" />

    <TextView
        android:id="@+id/tvMedication"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgItem"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/imgItem"
        android:layout_toRightOf="@+id/imgItem"
        android:fontFamily="@font/roboto_black"
        android:textColor="#000"
        android:textStyle="bold"
        tools:text="Item test text" />


</RelativeLayout>
